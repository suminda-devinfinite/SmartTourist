<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mainmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.coderx.smarttour.Mainmenu">


    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/backimage"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scaleType="centerCrop"
        android:layout_height="530dp" />

    <ImageButton
        android:layout_width="86dp"
        android:layout_height="115dp"
        android:src="@drawable/compass"
        android:id="@+id/imageButton"
        android:scaleType="centerInside"
        android:onClick="btnNextActivity"
        android:layout_marginEnd="20dp"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_toStartOf="@+id/imageButton4"
        android:background="?android:selectableItemBackground"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="115dp"
        android:src="@drawable/flighttrack"
        android:id="@+id/imageButton5"
        android:scaleType="centerInside"
        android:onClick="btnPlaneTrackActivity"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="?android:selectableItemBackground"/>

    <ImageButton
        android:src="@drawable/taxytrack"
        android:id="@+id/imageButton6"
        android:layout_width="92dp"
        android:layout_height="115dp"
        android:scaleType="centerInside"
        android:onClick="launchTaxiTracker"
        android:background="?android:selectableItemBackground"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_alignEnd="@+id/imageButton" />

    <ImageButton
        android:layout_width="86dp"
        android:layout_height="115dp"
        android:src="@drawable/nearby"
        android:id="@+id/imageButton4"
        android:scaleType="centerInside"
        android:onClick="btnNearByActivity"
        android:background="?android:selectableItemBackground"
        android:layout_above="@+id/imageButton5"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:src="@drawable/about"
        android:id="@+id/imageButton2"
        android:scaleType="centerInside"
        android:layout_width="86dp"
        android:layout_height="115dp"
        android:layout_marginStart="10dp"
        android:onClick="btnAboutActivity"
        android:background="?android:selectableItemBackground"
        android:layout_above="@+id/imageButton5"
        android:layout_toEndOf="@+id/imageButton5" />

</RelativeLayout>
